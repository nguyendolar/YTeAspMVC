
@{
    ViewBag.Title = "Doctor";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main>
    <div class="container-fluid px-4">
        <h4 class="mt-1">Danh sách lịch hẹn</h4>

        <div class="card mb-4">
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead style="color:#0d6efd ">
                        <tr style="background-color: darkgrey">
                            <th>STT</th>
                            <th>Người dùng</th>
                            <th>Ngày đặt lịch</th>
                            <th>Thời gian</th>
                            <th>Lý do</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                        </tr>
                    </tfoot>
                    <tbody>
                        @{ var stt = 1;}
                        <input type="hidden" value="@ViewBag.List.Count" id="dodai" />
                        @foreach (var item in ViewBag.List)
                        {
                            var nameModelDes = "exampleModalDes" + item.IdBooking;
                            <tr>
                                <td style="width:10px">@stt</td>
                                <td>
                                    @item.User.FullName
                                </td>
                                <td>
                                    @item.Day
                                </td>
                                <td>
                                    @item.Time
                                </td>
                                <td>
                                    @item.Reason
                                </td>
                            </tr>
                            stt++;
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>

