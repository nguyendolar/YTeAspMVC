
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="breadcrumb-area" style="background-image: url(~/Content/images//resources/breadcrumb-bg.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="inner-content clearfix">
                    <div class="title float-left">
                        <h2>Danh sách bác sĩ</h2>
                    </div>
                    <div class="breadcrumb-menu float-right">
                        <ul class="clearfix">
                            <li><a href="index-2.html">Trang chủ</a></li>
                            <li><i class="fa fa-angle-right" aria-hidden="true"></i></li>
                            <li class="active"></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="doctor-area">
    <div class="container">
        <div class="row">

            <div class="col-xl-12">
                <div class="doctor-content">
                    @foreach (var doctor in ViewBag.List)
                    {
                        <!--Start Single doctor item-->
                        <div class="single-doctor-item wow fadeInUp" data-wow-delay="300ms">
                            <div class="row">
                                <div class="col-xl-5">
                                    <div class="img-holder">
                                        <img src="~/Content/images/@doctor.Image" alt="Awesome Image">
                                        <div class="overlay">
                                            <div class="box">
                                                <div class="content">
                                                    <a class="btn-one" href="#">Đặt Lịch</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-7">
                                    <div class="text-holder">
                                        <span>@doctor.Specialist</span>
                                        <h3>@doctor.FullName</h3>
                                        <p>@doctor.Describe</p>
                                        <ul>
                                            <li><span class="flaticon-e-mail-envelope"></span>@doctor.Email</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--End Single doctor item-->
                    }

                </div>
            </div>
        </div>
    </div>
</section>

